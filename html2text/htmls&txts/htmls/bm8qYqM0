    function configLogout(isShow, desc) {
        let logoutDesc = document.getElementById("logout_desc");
        if (logoutDesc) {
            if (isShow) {
                logoutDesc.style.display = "block";   //隐藏而不删除
                logoutDesc.innerHTML = logoutDesc.innerHTML.replace("注销账号说明", desc);
            } else {
                logoutDesc.style.display = "none";   //隐藏而不删除
                // logoutDesc.parentNode.removeChild(div);   //删除
            }
        }
    }

    function checkLogoutDesc() {
        configLogout(false);
        var channelCode = "xiaomi";
        var adsdkName = "xiaomi";

        logoutDescMap={
            "xiaomi":"本游戏使用小米账号登录，如您希望注销账号，您可以通过点击【游戏中心】-【我的】-【修改资料】或【游戏中小手柄】-【我的】-【联系客服】以注销账号。",
            "vivo":"本游戏使用vivo登录，若您需要注销您的vivo登录帐号，您可以通过点击vivo侧边悬浮按钮-->点击账号名称-->点击“账号与安全”-->点击“账号注销”来进行账号注销操作。如果有其他疑问可联系vivo客服人员获取帮助。",
            "oppo":"本游戏使用oppo账号登录，若您需要注销您的oppo登录帐号，您可以通过登录id.hevtap.com，进入“个人数据管理”，进行帐号删除操作；或者切换到手机“游戏中心”，点击右下角【我】选项，点击【联系我们】选项，点击【在线客服】选项，联系客服帮助申请注销。如果有其他疑问可联系oppo客服人员获取帮助。",
            "huawei":"本游戏使用华为账号登录，若您需要注销您的华为登录帐号，您可以前往设置 > 登录华为帐号 > 帐号安全 > 安全中心 > 销户，根据页面提示进行操作。或者进入华为帐号主页https://id1.cloud.huawei.com，登录华为帐号，点击帐号安全/帐号与安全 > 安全中心 > 销户，根据页面提示进行操作。"
        }
        if(adsdkName === "topon" || adsdkName ==="gromore"){
            if(channelCode==="vivo" || channelCode==="oppo" || channelCode==="huawei" || "xiaomi"){
                configLogout(true, logoutDescMap[channelCode].replace("本游戏使用","本应用若使用"));
            }
        }else if (adsdkName === "xiaomi" || adsdkName === "oppo" || adsdkName === "vivo" || adsdkName === "huawei") {
            configLogout(true, logoutDescMap[adsdkName])
        }
    }

    window.onload = function () {
        checkLogoutDesc();
    };
</script>

